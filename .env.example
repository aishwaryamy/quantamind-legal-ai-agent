# Quantamind Legal AI Agent - Environment Configuration
# Copy this file to .env and fill in your values

# Hugging Face Configuration
HF_TOKEN=your_huggingface_token_here
HF_HOME=./cache/huggingface
TRANSFORMERS_CACHE=./cache/transformers

# Model Configuration
MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.1
MODEL_CACHE_DIR=./models
MAX_MODEL_MEMORY=8GB

# Data Configuration
DATA_DIR=./data
CUAD_DATASET_URL=https://zenodo.org/records/4595826/files/CUAD_v1.json
USE_SAMPLE_DATA=false

# Performance Configuration
DEVICE=auto  # Options: auto, cpu, cuda, mps
BATCH_SIZE=1
MAX_LENGTH=512
TEMPERATURE=0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
ENABLE_DEBUG=false

# Docker Configuration (for containerized deployment)
CONTAINER_NAME=legal-ai-agent
CONTAINER_PORT=8000
CONTAINER_MEMORY_LIMIT=16g

# API Configuration (future feature)
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Security Configuration
ENABLE_AUTH=false
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=localhost,127.0.0.1